COUNTRIES = ["'Italy'"]

rule all:
    input:
        expand("snakemake_outputs/{x}_TotalEmissions.png", x = "".join(COUNTRIES).replace("'",""))

rule download_data:
    output:
        "'Agrofood_co2_emission.csv'"
    shell:
        'wget -O {output} "https://drive.google.com/file/d/1Wytf3ryf9EtOwaloms8HEzLG0yjtRqxr/view?usp=sharing"'

rule total_emissions_plot:
    input:
        "'Agrofood_co2_emission.csv'"
    params:
        b = 0,
        c1 = 1,
        c2 = 29,
        d1 = "'Year'",
        d2 = "'Total Emissions'",
    output:
        expand("snakemake_outputs/{x}_TotalEmissions.png", x = "".join(COUNTRIES).replace("'",""))
    shell:
        "python plot_data.py --file_name {input} --country_list " + " ".join(COUNTRIES) + " --country_column {params.b} --result_column_list {params.c1} {params.c2} --x_y_labels {params.d1} {params.d2} --plot_name {output}"